# MongoDB连接配置
MONGODB_URI=mongodb://localhost:27017/mongodb_viewer

# Redis配置（用于AI缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AI服务配置
# 请在此处填入您的OpenAI API密钥
# 获取方式：https://platform.openai.com/api-keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AI_MODEL_PROVIDER=openai
AI_MODEL_NAME=gpt-4

# AI功能开关
ENABLE_AI_FEATURES=true
AI_FEATURE_ENABLED=true
AI_RATE_LIMIT=100
AI_TIMEOUT=30000

# 安全配置
AI_QUERY_WHITELIST=find,aggregate,count,distinct
AI_MAX_RESULT_SIZE=1000
AI_MAX_QUERY_COMPLEXITY=5

# 服务器配置
PORT=3001
NODE_ENV=development

# CORS配置
CORS_ORIGIN=http://localhost:5173